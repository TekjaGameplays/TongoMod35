<?xml version="1.0" encoding="UTF-8"?>
<raiz>


	<!-- REMOVE VANILLA FOOD AND WATER BARS -->
	<remove xpath="/windows/window[@name='windowToolbelt']/rect/rect[@stat_type='Food']" />
	<remove xpath="/windows/window[@name='windowToolbelt']/rect/rect[@stat_type='Water']" />
	<remove xpath="/windows/window[@name='windowToolbelt']/rect/sprite[@pos='0,6']" /><!--XP display-->
	<remove xpath="/windows/window[@name='HUDLeftStatBars']/rect[@name='hud']/rect[@stat_type='Stamina']/sprite[@name='sprint']" />

	
	<append xpath="/windows/window[@name='windowToolbelt']">
		<rect pos="376,-39" width="750" height="75" >
		<texture depth="8" width="772" height="97" pivot="center" texture="@modfolder:UIAtlases/Textures/marco_test1.png"/>
		</rect>
	</append>


	<!-- NEW FOOD AND WATER BARS IN HUD -->
	<append xpath="/windows/window[@name='HUDLeftStatBars']/rect[@side='right']">
		
	
		<!-- NEW EXP & LV BAR -->
		<rect pos="176,-50" width="100" height="46" controller="ToolbeltWindow" visible="{statvisible}" >

			<sprite depth="1" name="border" color="110,110,110,128" type="sliced" />
			<sprite depth="2" name="background" color="110,110,110,140" type="sliced" />

			<filledsprite depth="3" name="background" color="110,110,110,128" width="98" type="filled" fill="{statmodifiedmax}" />

			<filledsprite depth="5" pos="1,0" width="98" name="BarContent" color="0,94,246,170" type="filled" fill="0" globalopacity="false" />
			<sprite depth="5" name="BarContent" color="128,4,128,200" width="90" foregroundlayer="true" type="filled" fill="{xp}" globalopacity="false"/>

			<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
			<filledsprite depth="8" name="background" color="0,0,0,255" width="100" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
			<filledsprite depth="3" name="background" color="0,0,0,255" width="99" fillcenter="false" type="filled" fill="{statmodifiedmax}" />

			<sprite depth="9" pos="5,-10" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_character" size="35,35"  foregroundlayer="true" />
			<label depth="9" pos="65,-25" name="LevelNumber" width="65" height="62" pivot="center" justify="center" text="{cvar($LastPlayerLevel)}" font_size="30" controller="HUDStatBar" />
		</rect>
		
	
		<!-- FOOD -->
		<rect pos="176,-100" width="100" height="46" controller="HUDStatBar" stat_type="Food" visible="{statvisible}">
			<sprite depth="1" name="border" color="0,0,0,128" type="sliced" />
			<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />

			<filledsprite depth="3" name="background" color="110,110,110,128" width="98" type="filled" fill="{statmodifiedmax}" />

			<filledsprite depth="5" pos="1,0" width="98" name="BarContent" color="0,128,90,170" type="filled" fill="0" globalopacity="false" />
			<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_hunger" size="35,35" pos="5,-5" foregroundlayer="true" />
			<label depth="7" font_size="25" text="{statcurrent}%" color="[white]" width="100" pos="20,-12" effect="outline" upper_case="true" justify="center" />

			<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
			<filledsprite depth="8" name="background" color="0,0,0,255" width="100" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
			<filledsprite depth="3" name="background" color="0,0,0,255" width="99" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
		</rect>
		
		
		<!-- Skill Points -->
		<rect pos="280,-50" width="100" height="46" controller="PlayerStats, TM" visible="{statvisible}" >
			<sprite depth="1" name="border" color="110,110,110,128" type="sliced" />
			<sprite depth="2" name="background" color="110,110,110,140" type="sliced" />
			
			<filledsprite depth="3" name="background" color="110,110,110,128" width="98" type="filled" fill="{statmodifiedmax}" />
			
			<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_skills" size="35,35" pos="5,-5" foregroundlayer="true" tooltip_key="xuiSkillPoints2" />
			<label depth="7" font_size="25" text="{PlayerSkillPoints}" color="[white]" width="100" pos="20,-12" effect="outline" upper_case="true" justify="center" tooltip_key="xuiSkillPoints2" />
			
			<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
			<filledsprite depth="8" name="background" color="0,0,0,255" width="100" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
			<filledsprite depth="3" name="background" color="0,0,0,255" width="99" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
		</rect>	
		
		
		<!-- WATER -->
		<rect pos="280,-100" width="100" height="46" controller="HUDStatBar" stat_type="Water" visible="{statvisible}">
			<sprite depth="1" name="border" color="0,0,0,128" type="sliced" />
			<sprite depth="2" name="background" color="0,0,0,140" type="sliced" />

			<filledsprite depth="3" name="background" color="110,110,110,128" width="98" type="filled" fill="{statmodifiedmax}" />

			<filledsprite depth="5" pos="1,0" width="98" name="BarContent" color="0,94,246,170" type="filled" fill="0" globalopacity="false" />
			<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_water" size="35,35" pos="5,-5" foregroundlayer="true" />
			<label depth="7" font_size="25" text="{statcurrent}%" color="[white]" width="100" pos="20,-12" effect="outline" upper_case="true" justify="center" />

			<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
			<filledsprite depth="8" name="background" color="0,0,0,255" width="100" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
			<filledsprite depth="3" name="background" color="0,0,0,255" width="99" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
		</rect>
	
		<!-- Deaths -->
		<rect pos="384,-50" width="100" height="46" controller="PlayerStats, TM" visible="{statvisible}" >
			<sprite depth="1" name="border" color="110,110,110,128" type="sliced" />
			<sprite depth="2" name="background" color="110,110,110,140" type="sliced" />
			
			<filledsprite depth="3" name="background" color="110,110,110,128" width="98" type="filled" fill="{statmodifiedmax}" />
			
			<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_near_death_trauma" size="35,35" pos="5,-5" foregroundlayer="true" tooltip_key="xuiDeaths" />
			<label depth="7" font_size="25" text="{PlayerDeaths}" color="[white]" width="100" pos="20,-12" effect="outline" upper_case="true" justify="center" tooltip_key="xuiDeaths" />
			
			<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
			<filledsprite depth="8" name="background" color="0,0,0,255" width="100" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
			<filledsprite depth="3" name="background" color="0,0,0,255" width="99" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
		</rect>

		<!-- ELEVATION -->
		<rect pos="384,-100" width="100" height="46" controller="MapStats" visible="{statvisible}" >
			<sprite depth="1" name="border" color="110,110,110,128" type="sliced" />
			<sprite depth="2" name="background" color="110,110,110,140" type="sliced" />

			<filledsprite depth="3" name="background" color="110,110,110,128" width="98" type="filled" fill="{statmodifiedmax}" />

			<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_survival" size="35,35" pos="5,-5" foregroundlayer="true" tooltip_key="xuiElevation" />
			<label depth="7" font_size="25" text="{mapelevation}" color="[white]" width="100" pos="20,-12" effect="outline" upper_case="true" justify="center" tooltip_key="xuiElevation"/>

			<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
			<filledsprite depth="8" name="background" color="0,0,0,255" width="100" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
			<filledsprite depth="3" name="background" color="0,0,0,255" width="99" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
		</rect>
		
	</append>  

	<append xpath="/windows/window[@name='HUDRightStatBars']">
		<!-- Loot Stage -->
		<rect name="hud" pos="-10,106" rows="2" cols="1" width="168" side="right">
			
			<!-- Loot Stage -->
			<rect pos="-486,-1" width="100" height="46" controller="PlayerStats, TM" visible="{statvisible}" >
				<sprite depth="1" name="border" color="110,110,110,128" type="sliced" />
				<sprite depth="2" name="background" color="110,110,110,140" type="sliced" />
				
				<filledsprite depth="3" name="background" color="110,110,110,128" width="98" type="filled" fill="{statmodifiedmax}" />
				
				<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_loot_sack" size="35,35" pos="5,-5" foregroundlayer="true" tooltip_key="xuiLootstage" />
				<label depth="7" font_size="25" text="{PlayerLootStage}" color="[white]" width="100" pos="20,-12" effect="outline" upper_case="true" justify="center" tooltip_key="xuiLootstage" />
				
				<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
				<filledsprite depth="8" name="background" color="0,0,0,255" width="100" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
				<filledsprite depth="3" name="background" color="0,0,0,255" width="99" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
			</rect>

			<!-- Game Stage -->
			<rect pos="-486,-50" width="100" height="46" controller="PlayerStats, TM" visible="{statvisible}" >
				<sprite depth="1" name="border" color="110,110,110,128" type="sliced" />
				<sprite depth="2" name="background" color="110,110,110,140" type="sliced" />

				<filledsprite depth="3" name="background" color="110,110,110,128" width="98" type="filled" fill="{statmodifiedmax}" />

				<sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="ui_game_symbol_players" size="35,35" pos="5,-5" foregroundlayer="true" tooltip_key="xuiGameStage" />
				<label depth="7" font_size="25" text="{PlayerGameStage}" color="[white]" width="100" pos="20,-12" effect="outline" upper_case="true" justify="center" tooltip_key="xuiGameStage" />

				<sprite depth="8" name="border" color="0,0,0,255" type="sliced" fillcenter="false"/>
				<filledsprite depth="8" name="background" color="0,0,0,255" width="100" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
				<filledsprite depth="3" name="background" color="0,0,0,255" width="99" fillcenter="false" type="filled" fill="{statmodifiedmax}" />
			</rect>
			
		</rect>
	</append>


	<!-- frame belt test -->
	<append xpath="/windows/window[@name='windowToolbelt']/rect/rect[@controller='Toolbelt']">		
		<sprite depth="6" pos="0,0"  name="Background" sprite="@modfolder:UIAtlases/ItemIconAtlas/marco_test.png" height="46" width="162" pivot="center"/>
		<sprite depth="3" name="Icon" size="84,84" pos="45,-42" pivot="center" sprite="@modfolder:UIAtlases/ItemIconAtlas/marco_test.png" globalopacity="false" />	
	</append>



	<!-- XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX -->

	<!-- new 12 slots crafting queue -->
	<remove xpath="/windows/window[@name='windowCraftingQueue']"/>

	<append xpath="/windows">
		<window name="windowCraftingQueue" width="397" height="78" panel="Left" cursor_area="true" >
			<rect depth="0" pos="-52,-90" width="303" controller="CraftingQueue">
				<grid name="queue" rows="2" cols="6" pos="58,88" cell_width="65" cell_height="65" repeat_content="true">
					<tongo_recipe_stack name="0"/>
				</grid>
			</rect>
		</window>
	</append>

	<!-- XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX -->

	
	

</raiz>